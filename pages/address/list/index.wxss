page {
  background-color: #fff;
}
.container {
  background-color: #fff;
  padding-bottom: 200rpx;
}
.list-item {
  border-bottom: 1rpx solid #efeff5;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 0 40rpx;
}
.list-item .info {
  display: flex;
  flex-direction: row;
  color: #484848;
  margin-top: 20rpx;
}
.info .name {
  font-size: 36rpx;
  line-height: 50rpx;
}
.info .mobile {
  margin-left: 20rpx;
  font-size: 32rpx;
  line-height: 44rpx;
}
.info .stamp {
  width: 80rpx;
  height: 40rpx;
  margin-left: 10rpx;
  background-color: #70aef9;
  border-radius: 10rpx;
  color: #fff;
  font-size: 24rpx;
  display:flex;
  align-items:center;
  justify-content:center;
}
.list-item .address {
  margin-top: 16rpx;
  font-size: 28rpx;
  color: #9b9b9b;
  line-height: 44rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
  margin-bottom: 40rpx;
}
.list-item .operate {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 20rpx;
  line-height: 50rpx;
}
.operate .default {
  width: 240rpx;
  display: flex;
  flex-direction: row;
}
.operate .default .iconfont {
  font-size: 36rpx;
}
.operate .default .icon-selected {
  color: #70aef9;
}
.operate .title {
  font-size: 24rpx;
  color: #484848;
  margin-left: 12rpx;
}
.operate .btns {
  flex: 1;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}
.operate .btns .delete {
  margin-left: 48rpx;
}
.no-data-add-btn {
  margin-top: 50rpx;
  font-size: 32rpx;
  color: #fff;
  width: 250rpx;
  background-color: #70aef9;
  border-radius: 60rpx;
}