page {
  background-color: #fff;
}
.container {
  background-color: #fff;
  padding: 40rpx;
}
.title {
  font-size: 32rpx;
  line-height: 50rpx;
}
.num {
  margin-top: 10rpx;
  font-size: 32rpx;
  line-height: 50rpx;
}
.relate {
  margin-top: 72rpx;
}
.radio-group {
  margin-top: 16px;
}
.radio-item {
  display: flex;
  align-items: center;
  justify-content:space-between;
  height: 120rpx;
  font-size: 32rpx;
  border-bottom: 1rpx solid #efeff5;
}
radio .wx-radio-input.wx-radio-input-checked::before{
  background-color: #70aef9!important;
  border: 1rpx solid #70aef9!important;
  border-radius: 50%;
  width: 64rpx;
  height: 64rpx;
  margin-top: -2rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.form-item {
  font-size: 32rpx;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #efeff5;
}
.form-item-flex-right {
  flex: 1;
  text-align: right;
}
.placeholder {
  color: #9b9b9b;
}
.icon-right-arrow {
  display: inline-block;
	font-size: 20rpx;
	color: #ccc;
}
.next-btn {
  position: fixed;
  left: 0;
  bottom: 0;
  background-color: #70aef9;
  color: #fff;
  width: 100%;
  border-radius: 0;
  padding: 0;
}