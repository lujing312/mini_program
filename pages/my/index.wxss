page {
	background-color: #fff;
}
.container {
	background-color: #fff;
	padding-bottom: 200rpx;
}
.user-wrap{
	text-align: center;
	height: 200rpx;
	background-color: #fff;
  display: flex;
  flex-direction: column;
	justify-content: center;
  align-items: center;
	padding: 20rpx 0;
	border-bottom: 1rpx solid #efeff5;
}
.user-wrap .login-btn {
  width: 160rpx;
  height: 80rpx;
  font-size: 32rpx;
  background-color: #fff;
  color: #70aef9;
  padding: 0;
}
.user-wrap .login-btn::after {
  border: none;
  border-radius: none;
}
.avatar {
	width: 120rpx;
	height: 120rpx;
	border-radius: 60rpx;
}
.username {
	font-size: 32rpx;
	color: #484848;
}
.my-wrap {
	flex: 1;
	background-color: #fff;
	font-size: 28rpx;
	color: #484848;
}
.my-item {
	line-height: 72rpx;
	padding: 20rpx 40rpx;
	border-bottom: 1rpx solid #efeff5;
	display: flex;
	flex-direction: row;
	align-items: center;
  font-size: 32rpx;
}
.my-item .unread-msg {
	width: 40rpx;
	height: 40rpx;
	border-radius: 20rpx;
	background-color: #70aef9;
	color: #fff;
	font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.my-item-title {
	margin-left: 20rpx;
}
.icon-right-arrow {
	font-size: 24rpx;
	color: #aaa;
}
.my-right-icon {
	flex: 1;
  text-align: right;
}
.my-item-right {
	flex: 1;
	display: flex;
  justify-content: flex-end;
  align-items: center;
}
.icon-genebox,
.icon-setting,
.icon-return  {
	color: #006CF8;
}
.icon-share-qrcode,
.icon-order,
.icon-message  {
	color: #00C197;
}
.icon-coupon,
.icon-feedback {
	color: #FF6F5A;
}
.icon-scan-qrcode,
.icon-address  {
	color: #FFB721;
}
.icon-size {
	font-size: 40rpx;
}