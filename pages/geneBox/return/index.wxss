page {
	background-color: #fff;
}
.container {
	background-color: #fff;
	padding-bottom: 200rpx;
}
.recipient-info {
  margin: 70rpx 40rpx 50rpx 40rpx;
  border: 1rpx solid #dadada;
  border-radius: 10rpx;
  padding: 40rpx;
}
.title {
  font-size: 32rpx;
  font-weight: 500;
  line-height: 44rpx;
}
.tips {
  margin-top: 16rpx;
  font-size: 24rpx;
  line-height: 32rpx;
  color: #484848;
  font-weight:400;
}
.recipient-info .receiver,
.recipient-info .mobile,
.recipient-info .address {
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #484848;
  line-height: 56rpx;
}

.recipient-info .receiver {
  margin-top: 24rpx;
}
.header {
  padding: 0 40rpx 20rpx 40rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
.sender-wrap {
  margin-bottom: 40rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
.sender-info {
  display: flex;
  flex-direction: row;
  padding: 40rpx 40rpx 16rpx 40rpx;
  font-size: 32rpx;
  line-height: 40rpx;
  justify-content: space-between;
  color: #292E4F;
}
.address-info {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 0 40rpx 40rpx 40rpx;
}
.sender-wrap .text {
  font-size: 32rpx;
  color: #9b9b9b;
}
.no-address {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 40rpx;
}
.icon-right-arrow {
	font-size: 28rpx;
  color: #ccc;
  display: flex;
  align-items: center;
}
.ellipsis {
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}
.list-item {
	border-bottom: 1rpx solid #efeff5;
	padding: 20rpx 40rpx;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
}
.list-item .left {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.list-item .icon-avatar {
  color: #c8c7ce;
  font-size: 92rpx;
}
.list-item .main {
	margin-left: 24rpx;
	display: flex;
	flex-direction: column;
}
.list-item .main .name {
  font-size: 32rpx;
  line-height: 44rpx;
  color: #484848;
}
.list-item .main .num {
  font-size: 24rpx;
  line-height: 34rpx;
  color: #484848;
}
.list-item .checkbox {
  display: flex;
	align-items: center;
	font-size: 48rpx;
}
.list-item .checkbox .icon-selected {
	color: #70aef9;
}
.list-item .checkbox .icon-unselected {
	color: #979797;
}
.no-data {
  margin-top: 60rpx;
  font-size: 28rpx;
  line-height: 44rpx;
  text-align: center;
  color: #888;
}
.dialog-bg {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  background: rgba(100, 100, 100, .5);
  z-index: 4;
  overflow:hidden;
}
.dialog-box {
  width: 520rpx;
  background: #FFF;
  border-radius: 20rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 40rpx 60rpx 30rpx 60rpx;
}
.dialog-main .mobile {
  font-size: 28rpx;
  color: #484848;
  font-weight: 600;
}
.dialog-main .receiver {
  line-height: 30rpx;
  font-size: 28rpx;
  color: #484848;
  font-weight: 600;
}
.dialog-main {
  border-radius: 10rpx;
  box-sizing: border-box;
  line-height: 40rpx;
}
.dialog-bot {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  box-sizing: border-box;
  margin-top: 20rpx;
}
.dialog-user-name {
  font-size: 28rpx;
  font-weight: 600;
  margin: 10rpx 0;
}
.dialog-point {
  margin-top: 10rpx;
  font-size: 32rpx;
  color: #484848;
  line-height: 56rpx;
  box-sizing: border-box;
  margin: 40rpx 0 30rpx 0;
}
.dialog-return-button {
  background: #fff;
  border: 2rpx solid #70AEF9;
  border-radius: 50rpx;
  font-size: 32rpx;
  color: #70AEF9;
  padding: 14rpx 30rpx;
}
.dialog-true-button {
  background: #70AEF9;
  border: 2rpx solid #70AEF9;
  color: #fff;
  border-radius: 50rpx;
  font-size: 32rpx;
  color: #fff;
  padding: 14rpx 30rpx;
}
.dialog-main .title {
  text-align: center;
  margin-bottom: 30rpx;
}
.user-message {
  padding: 0 30rpx;
  box-sizing: border-box;
  font-size: 32rpx;
}
.dialog-point-message {
  box-sizing: border-box;
  color: #999999;
  font-size: 24rpx;
  line-height: 40rpx;
}