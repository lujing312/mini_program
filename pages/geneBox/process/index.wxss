page {
  background-color: #fff;
}
.container {
  background-color: #fff;
  padding: 40rpx;
  padding-bottom: 200rpx;
}
.info {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.info .main {
  flex: 1;
}
.info .main .name {
  font-size: 36rpx;
  line-height: 56rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  word-break: break-all;
}
.info .main .num {
  margin-top: 8rpx;
  font-size: 28rpx;
  line-height: 44rpx;
  color: #9b9b9b;
}
.info .icon-right-arrow {
  width: 40rpx;
  display: inline-block;
	font-size: 32rpx;
	color: #ccc;
}
.list-wrap {
  margin-top: 40rpx;
}
.list-item {
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 70rpx;
  line-height: 64rpx;
}
.tip-msg {
  position: absolute;
  top: 60rpx;
  left: 88rpx;
  font-size: 24rpx;
  line-height: 32rpx;
  width: 80%;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}
.errmsg {
  color: #fc616c;
}
.waybill {
  color: #70aef9;
}
.list-item:not(:last-child):before {
  position: absolute;
  top: 60rpx;
  left: 30rpx;
  content: '';
  height: 80rpx;
  width: 1rpx;
  background-color: #dbdbdb;
}
.list-item .left {
  display: flex;
  flex-direction: row;
}
.list-item .left .iconfont {
  font-size: 48rpx;
}
.list-item .title {
  font-size: 32rpx;
  margin-left: 30rpx;
}
.list-item .active-title {
  color: #484848;
}
.list-item .normal-title {
  color: #c0c0c0;
}
.list-item .checkbox .iconfont {
  font-size: 48rpx;
}
.list-item .selected {
  color: #70aef9;
}
.list-item .unselected {
  color: #c0c0c0;
}
.list-item .left .img {
  width: 54rpx;
  height: 54rpx;
  border-radius: 50%;
}
.list-item .left .active-img {
  background-color: #70aef9;
}
.list-item .left .normal-img {
  border: 1rpx solid #c0c0c0;
}