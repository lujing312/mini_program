page {
  background-color: #fff;
}
.address-img {
  height: 12rpx;
  width: 100%;
  display: block;
}
.product-wrap .img {
  width: 90rpx;
  height: 90rpx;
}
.product-wrap .item {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 10rpx 40rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
.product-wrap .item .title {
  flex: 1;
  font-size: 28rpx;
  color: #484848;
  margin: 0 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.product-wrap .item .des {
  word-break: break-all;
  flex: 1;
}
.product-wrap .item .tips {
  color: #fff;
  background-color: #fd8554;
  border-radius: 36rpx;
  padding: 0 10rpx;
  font-size: 24rpx;
  height: 36rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.product-wrap .checkbox {
  width: 48rpx;
  display: flex;
  flex-direction: row;
}
.product-wrap .iconfont {
  font-size: 48rpx;
}
.product-wrap .icon-selected {
  color: #70aef9;
}
.product-wrap .icon-unselected {
  color: #9b9b9b;
}
.counter-wrap {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 40rpx;
  border-bottom:1rpx solid #f5f5f5;
}
.counter {
  width: 204rpx;
  display: flex;
  flex-direction: row;
  border: 1rpx solid #b2b2b2;
  border-radius: 8rpx;
  height: 60rpx;
}
.counter-minus,
.counter-count,
.counter-plus {
  width: 60rpx;
  height: 60rpx;
  line-height: 56rpx;
  font-size: 24rpx;
  text-align: center;
}
.counter .disabled {
  color: #b2b2b2;
}
.counter .counter-count {
  width: 80rpx;
  font-size: 28rpx;
  border-left: 1rpx solid #b2b2b2;
  border-right: 1rpx solid #b2b2b2;
}
.discount-tips {
  display: flex;
  flex-direction: column; 
}
.discount-tips-text {
  padding: 4rpx 10rpx;
  font-size: 24rpx;
  background-color: #fd8554;
  color: #fff;
  border-radius: 8rpx;
  margin-bottom: 4rpx;
  text-align: center;
}
.total-wrap {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  padding-top: 20rpx;
  padding-right: 40rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
.price-wrap {
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #fd8554;
  font-size: 28rpx;
}
.price-wrap .icon-yen {
  font-size: 32rpx;
  color: #fd8554;
}
.price-wrap .price {
  font-weight: 500;
  font-size: 36rpx;
}
.card-wrap {
  background-color: #fff;
}
.ellipsis {
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}
.form-title {
  font-weight: 700;
  height: 90rpx;
  background-color: #fff;
  font-size: 28rpx;
  color: #484848;
  line-height: 40rpx;
  display: flex;
  align-items: center;
  padding-left: 40rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
.user-info {
  display: flex;
  flex-direction: row;
  padding: 20rpx 40rpx 16rpx 40rpx;
  font-size: 32rpx;
  line-height: 40rpx;
  justify-content: space-between;
  color: #484848;
}
.address-wrap {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  line-height: 44rpx;
  padding: 0 40rpx 20rpx 40rpx;
}
.address-wrap .text,
.no-address .text {
  font-size: 32rpx;
  color: #9b9b9b;
}
.no-address {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 40rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
.icon-right-arrow {
	font-size: 28rpx;
  color: #ccc;
  display: flex;
  align-items: center;
}
.form-item {
  border-bottom: 1rpx solid #f5f5f5;
  padding: 0 40rpx;
  font-size: 30rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
}
.form-label {
  display: inline-block;
  width: 140rpx;
  color: #9b9b9b;
}
.form-flex {
  flex: 1;
}
.coupon-items {
  height: auto;
  min-height: 100rpx;
}
.placeholder {
  color: #e5e5e5;
}
.discount-wrap {
  padding-bottom: 300rpx;
}
.coupon-name {
  display: inline-block;
}
.protocol-wrap {
  margin-top: 20rpx;
  font-size: 24rpx;
  line-height: 36rpx;
  color: #9b9b9b;
  padding: 0 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.protocol-wrap .protocol {
  color: #70aef9;
}
.submit-wrap {
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  width: 100%;
  background-color: #fff;
  border-top: 1rpx solid rgba(217, 217, 217, 0.5);
  z-index: 10;
}
.fix-iphonex {
  padding-bottom: 68rpx;
}
.total-price {
  flex: 1;
  padding-left: 36rpx;
}
.wechat-pay {
  font-size: 32rpx;
  width: 200rpx;
  border-radius: 0;
  height: 100%;
  background-color: #70aef9;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}