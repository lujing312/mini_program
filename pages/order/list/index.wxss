page {
  background-color: #fff;
}
.container {
  background-color: #fff;
  padding: 40rpx;
}
.list-item {
  margin-bottom: 40rpx;
  background-color: #fff;
  box-shadow: 0 20rpx 80rpx 0 rgba(190, 190, 206, 0.5);
  border-radius: 40rpx;
  display: flex;
  flex-direction: column;
}
.list-item .top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 40rpx;
  line-height: 50rpx;
}
.top .time {
  font-size: 24rpx;
  color: #262628;
}
.top .status {
  font-size: 32rpx;
  color: #70aef9;
}
.list-item .main {
  display: flex;
  flex-direction: row;
  margin: 0 40rpx;
}
.main .img {
  width: 144rpx;
  height: 144rpx;
  background-color: #fff;
}
.main .info {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin: 10rpx 0 0 20rpx;
}
.main .info .title {
  font-size: 36rpx;
  color: #4a4a4a;
  line-height: 50rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}
.main .nums {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 20rpx;
  font-size: 24rpx;
  line-height: 40rpx;
  color: #9b9b9b;
}
.list-item .bottom {
  margin: 20rpx 36rpx 36rpx 36rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.bottom .remain-price {
  line-height: 50rpx;
  font-size: 32rpx;
}
.remain-price-text {
  font-size: 24rpx;
  color: #9b9b9b;
}
.bottom .operate {
  flex: 1;
  display: flex;
  justify-content: flex-end;
}
.operate .op-btn {
  font-size: 24rpx;
  color: #262628;
  padding: 4rpx 24rpx;
  border: 1rpx solid #9b9b9b;
  border-radius: 32rpx;
  margin-left: 8rpx;
  display: flex;
  align-items: center;
}