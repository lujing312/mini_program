page {
  background-color: #fff;
}
.container {
  background-color: #fff;
}
.list-item {
  padding: 0 40rpx;
  border-bottom: 1rpx solid rgba(217, 217, 217, 0.5);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.list-item .info {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 20rpx;
}
.list-item .dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 16rpx;
  background-color: #70aef9;
}
.list-item .dot-disabled {
  background-color: #9b9b9b;
  color: #9b9b9b;
}
.list-item .title {
  flex: 1;
  margin-left: 32rpx;
  font-size: 32rpx;
  line-height: 50rpx;
  color: #4a4a4a;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}
.list-item .title-disabled {
  color: #9b9b9b;
}
.list-item .date {
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  margin-left: 44rpx;
  font-size: 24rpx;
  line-height: 34rpx;
  color: #9b9b9b;
}
